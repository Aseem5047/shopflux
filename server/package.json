{
	"name": "server",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only src/server.ts",
		"start": "node dist/server.js",
		"build": "tsc",
		"docker:start": "docker run -d -p 27017:27017 mongo && docker run -d -p 6379:6379 redis",
		"docker:stop": "docker stop $(docker ps -q --filter ancestor=mongo) $(docker ps -q --filter ancestor=redis) && docker rm $(docker ps -a -q --filter ancestor=mongo) $(docker ps -a -q --filter ancestor=redis)"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"type": "commonjs",
	"dependencies": {
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"jsonwebtoken": "^9.0.3",
		"mongoose": "^9.0.2",
		"redis": "^5.10.0",
		"stripe": "^20.1.0"
	},
	"devDependencies": {
		"@types/cookie-parser": "^1.4.10",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.6",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^25.0.3",
		"nodemon": "^3.1.11",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.9.3"
	}
}
